<div class="container">
  <div class="row">
    <div class="col">
      <h5><%= @customer.last_name + @customer.first_name %>さんの会員詳細画面</h5>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>会員ID</h6></div>
        <div class="col-3"><%= @customer.id %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>氏名</h6></div>
        <div class="col-3"><%= @customer.last_name + ' ' + @customer.first_name %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>フリガナ</h6></div>
        <div class="col-3"><%= @customer.last_name_kana + ' ' + @customer.first_name_kana %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>郵便番号</h6></div>
        <div class="col-3"><%= @customer.postal_code %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>住所</h6></div>
        <div class="col-3"><%= @customer.address %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>電話番号</h6></div>
        <div class="col-3"><%= @customer.telephone_number %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>メールアドレス</h6></div>
        <div class="col-3"><%= @customer.email %></div>
      </div>
      <div class="row">
        <div class="col-3 offset-md-1"><h6>会員ステータス</h6></div>
        <% if @customer.is_deleted == false %>
          <h6 class="text-success">有効</h6>
        <% else %>
          <h6 class="text-secondary">退会</h6>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success' %>
      <%= link_to "注文一覧を見る", admin_top_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>