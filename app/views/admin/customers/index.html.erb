<div class="container">
  <div class="row">
    <div class="col">
      <h4>会員一覧</h4>
      <table class="table">
        <tdead>
          <tr>
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
          </tr>
          </table>
        </tdead>
      <% @customers.each do |customer| %>
        <table class="table">
          <tbody>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.first_name + customer.last_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
             </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
<%= paginate @customers%>