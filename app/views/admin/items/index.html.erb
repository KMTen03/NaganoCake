<div class="container">
  <div class="row">
    <div class="col">
      <h5>商品一覧</h5>
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus"></i>
      <% end %>
      <table class="table">
        <tdead class="table-secondary">
          <tr>
            <th>商品ID</th>
            <th colspan="3">商品名</th>
            <th colspan="3">税抜価格</th>
          </tr>
        </tdead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td colspan="3">
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td colspan="3"><%= item.price %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @items%>
