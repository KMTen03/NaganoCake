<div class="container">
  <div class="row">
    <div class="col">
      <h5>商品編集</h5>
      <div class="row">
        <div class="col-md-6 mx-auto mt-5">
          <%= form_with model: @item, url: admin_item_path do |f| %>
            <div class="field">
              <%= f.label :image, "商品画像" %>
              <%= f.file_field :image %>
            </div>
            <div class="field">
              <%= f.label :name, "商品名" %>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :introduction, "商品説明" %>
              <%= f.text_area :introduction %>
            </div>
            <div class="field">
              <%= f.label :price, "税抜価格" %>
              <%= f.text_field :price %>円
            </div>
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>