<div class="container">
  <div class="row">
    <div class="col">
      <h4>注文履歴一覧</h4>
      <table class="table">
       <thead class="table-secondary">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
         <td>
           <%= link_to admin_order_path(order.id) do %>
             <%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
            <% end %>
         </td>
         <td>
           <%= order.customer.last_name + order.customer.first_name %>
         </td>
         <td>
           <% @total_amount = 0 %>
           <% @order_details.each do |order_detail| %>
           <% @total_amount += order_detail.quantity %>
           <% end %>
           <%= @total_amount %>
         </td>
       </tr>
      </tbody>
      <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>