<div class="container">
  <div class="row">
    <div class="col">
    <h5>会員情報編集</h5>
    <%= form_with model: @customer, url: customers_path do |f| %>
      <%#= render "public/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :last_name, "氏名" %><br>
        <%= f.text_field :last_name %>
      </div>
    
      <div class="field">
        <%= f.text_field :first_name %><br>
      </div>
    
      <div class="field">
        <%= f.label :last_name_kana, "フリガナ" %><br>
        <%= f.text_field :last_name_kana %>
      </div>
    
      <div class="field">
        <%= f.text_field :first_name_kana %><br>
      </div>
      
       <div class="field">
        <%= f.label :post_code, "郵便番号" %><br>
        <%= f.text_field :post_code %>
       </div>
      
      <div class="field">
        <%= f.label :address, "住所" %><br>
        <%= f.text_field :address %>
      </div>
      
      <div class="field">
        <%= f.label :telephone_number, "電話番号" %><br>
        <%= f.text_field :telephone_number %>
      </div>
      
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <%= f.submit '編集内容を保存', class:'btn btn-success' %>
      
      <%= link_to "退会する", customers_confirm_path, class:'btn btn-danger' %>
      
    <% end %>


   


  
    
