<div class="container">
  <div class="row">
    <div class="col-md-5">
    <h5>注文履歴詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
    <h6>注文情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">注文日</th>
          <td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送先</th>
          <td>
            <%= @order.post_code %>
            <%= @order.address %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary">支払方法</th>
          <td><%= @order.payment_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-6 offset-md-1">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th class="table-secondary">配送料</th>
          <td><%= @order.carriage = 800 %></td>
        </tr>
        <tr>
          <th class="table-secondary">ご請求額</th>
          <% @total += @order.carriage %>
          <td><%= @total %></td>
        </tr>
      </table>
    </div>
  </div>
  <h6>注文内容</h6>
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <thead class="table-secondary">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order.orderdetails.each do |orderdetail| %>
        <% @total = 0 %>
        <tbody>
          <tr>
            <td><%= orderdetail.item.name %></td>
            <td><%= orderdetail.tax_price %></td>
            <td><%= orderdetail.quantity %></td>
            <td>
              <%= orderdetail.quantity * orderdetail.tax_price %> 
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>